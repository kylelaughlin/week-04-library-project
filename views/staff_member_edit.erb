<% if @staff_member.errors.any? %>
  <% @staff_member.errors.full_messages.each do |m| %>
    <p> Error: <%=m%></p>
  <%end%>
<%end%>

<h1>Edit <%=@staff_member.name%></h1>

<form role="form" action="/staff_members/<%=@staff_member.id%>" method="post">
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" name="name" class="form-control" id="name" value="<%=@staff_member.name%>">
  </div>
  <div class="form-group">
    <label for="email">Email:</label>
    <input type="text" name="email" class="form-control" id="email" value="<%=@staff_member.email%>">
  </div>
  <div class="form-group">
    <label for="library">Library:</label>
    <select class="form-control" id="library" name="library_id">
      <%@libraries.each do |l| %>
        <option value="<%=l.id%>" <%= @staff_member.library_id == l.id ? 'selected' : '' %>><%=l.branch_name%></option>
      <% end %>
    </select>
  </div>
  <button type="submit" class="btn btn-default">Update Staff Member</button>
</form>

<hr>
