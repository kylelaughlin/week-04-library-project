<% if @patron.errors.any? %>
  <% @patron.errors.full_messages.each do |m| %>
    <p> Error: <%=m%></p>
  <%end%>
<%end%>

<h1>Edit <%=@patron.name%></h1>

<form role="form" action="/patron/<%=@patron.id%>/update" method="post">
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" name="name" class="form-control" id="name" value="<%=@patron.name%>">
  </div>
  <div class="form-group">
    <label for="email">Email:</label>
    <input type="text" name="email" class="form-control" id="email" value="<%=@patron.email%>">
  </div>
  <button type="submit" class="btn btn-default">Update Patron</button>
</form>
<a class="btn btn-default margin-top-10" href="/patron/<%=@patron.id%>">Cancel Patron Edit</a>

