<% if @staff_member.errors.any? %>
  <% @staff_member.errors.full_messages.each do |m| %>
    <p>Error: <%= m %></p>
  <% end %>
<% end %>

<h1>Create a Staff Member</h1>

<form action="/staff_members" method="post">
  Name: <input type="text" name="name"></br>
  Email: <input type="text" name="email"></br>
  Library: <select name="library_id">
            <%@libraries.each do |l|%>
              <option value="<%=l.id%>" <%= @staff_member.library_id == l.id ? 'selected' : '' %>>
                <%=l.branch_name%></option>
            <%end%>
          </select></br>
  <input type="submit" value="Create New Staff Member">
</form>

<p><a href="/staff_members">Back to Staff Members Menu</a><p>
