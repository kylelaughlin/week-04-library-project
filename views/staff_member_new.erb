<% if @staff_member.errors.any? %>
  <% @staff_member.errors.full_messages.each do |m| %>
    <p>Error: <%= m %></p>
  <% end %>
<% end %>

<h1>Create a Staff Member</h1>

<form role="form" action="/staff_members" method="post">
    <div class="form-group">
      <label for="name">Name:</label>
      <input type="text" name="name" class="form-control" id="_name" placeholder="Enter new staff member's name">
    </div>
    <div class="form-group">
      <label for="email">Email:</label>
      <input type="text" name="email" class="form-control" id="email" placeholder="Enter new staff member's email">
    </div>
    <div class="form-group">
      <label for="library">Library:</label>
      <select class="form-control" id="library" name="library_id">
        <%@libraries.each do |l| %>
          <option value="<%=l.id%>"><%=l.branch_name%></option>
        <% end %>
      </select>
    </div>
    <button type="submit" class="btn btn-default">Submit New Staff Member</button>
  </form>

