<% if @library.errors.any? %>
  <% @library.errors.full_messages.each do |m| %>
    <p> Error: <%=m%></p>
  <%end%>
<%end%>

<h1>Edit <%=@library.branch_name%></h1>

<form role="form" action="/library/<%=@library.id%>/update" method="post">
  <div class="form-group">
    <label for="branch_name">Branch Name:</label>
    <input type="text" name="branch_name" class="form-control" id="branch_name" value="<%=@library.branch_name%>">
  </div>
  <div class="form-group">
    <label for="address">Address:</label>
    <input type="text" name="address" class="form-control" id="address" value="<%=@library.address%>">
  </div>
  <div class="form-group">
    <label for="phone_number">Phone Number:</label>
    <input type="tel" name="phone_number" class="form-control" id="phone_number" value="<%=@library.phone_number%>">
  </div>
  <button type="submit" class="btn btn-default">Update Library</button>
</form>

