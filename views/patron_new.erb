<% if @patron.errors.any? %>
  <% @patron.errors.full_messages.each do |m| %>
    <p>Error: <%= m %></p>
  <% end %>
<% end %>

<h1>Create a Patron</h1>

<form role="form" action="/patrons" method="post">
  <div class="form-group">
    <label for="name">Name:</label>
    <input type="text" name="name" class="form-control" id="name" placeholder="Enter new patron's name">
  </div>
  <div class="form-group">
    <label for="email">Email:</label>
    <input type="text" name="email" class="form-control" id="email" placeholder="Enter new patron's email">
  </div>
  <button type="submit" class="btn btn-default">Create New Patron</button>
</form>
<a class="btn btn-default margin-top-10" href="/patrons">Cancel Create Patron</a>

