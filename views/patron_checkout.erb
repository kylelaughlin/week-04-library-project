<h1>Check Out for <%=@patron.name%></h1>

<form role="form" action="/patron/<%=@patron.id%>/checkout" method="post">
  <div class="form-group">
    <label for="book">Book:</label>
    <select class="form-control" id="book" name="book_id">
      <%@books.each do |b| %>
        <option value="<%=b.id%>"><%=b.title%></option>
      <% end %>
    </select>
  </div>
  <button type="submit" class="btn btn-default">Check Out Book</button>
</form>
<a class="btn btn-default" href="patron/<%=@patron.id%>">Cancel Check Out</a>

