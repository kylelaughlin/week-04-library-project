  <% @library.errors.full_messages.each do |m| %>
    <p>Error: <%= m %></p>
  <% end %>
<% end %>

<h1>Create a New Library</h1>


<form role="form" action="/libraries" method="post">
    <div class="form-group">
      <label for="branch_name">Branch Name:</label>
      <input type="text" name="branch_name" class="form-control" id="branch_name" placeholder="Enter new branch name">
    </div>
    <div class="form-group">
      <label for="address">Address:</label>
      <input type="text" name="address" class="form-control" id="address" placeholder="Enter new branch address">
    </div>
    <div class="form-group">
      <label for="phone_number">Phone Number:</label>
      <input type="tel" name="phone_number" class="form-control" id="phone_number" placeholder="Enter new branch phone number">
    </div>
    <button type="submit" class="btn btn-default">Submit New Library</button>
  </form>

