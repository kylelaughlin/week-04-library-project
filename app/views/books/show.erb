<% if @book.errors.any? %>
  <% @book.errors.full_messages.each do |m| %>
    <p> Error: <%=m%></p>
  <%end%>
<%end%>

<div class="row">
  <div class="col-md-12 text-center">
    <div class="panel panel-default padding-10">
      <h1><%=@book.title%></h1>
      <p>Author: <%=@book.author%></p>
      <p>ISBN: <%=@book.isbn%></p>
      <p>Library: <%=@book.library.branch_name%></p>
      <p>Status: <%=@book.patron_id.nil? ? "Available" : "Checked out by #{@book.patron.name}"%><p>
      <a class="btn btn-default" href="/books/<%=@book.id%>/edit">Edit Book</a>
      <a class="btn btn-default" href="/books/<%=@book.id%>/<%=@book.patron_id.nil? ? 'checkout' : 'checkin'%>">
        <%=@book.patron_id.nil? ? "Check Out Book" : "Check In Book"%></a>
    </div>
  </div>
</div>
<hr>
